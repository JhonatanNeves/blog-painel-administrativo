<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <br>
    <h2>Artigos</h2>
    
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Ações</th>
            </tr>
         </thead>
         <tbody>
             <% articles.forEach(article => { %>
                <tr>
                    <td><%=article.id%></td>
                    <td><%=article.title%></td>
                    <td><%=article.slug%></td>
                    <td><%=article.category.title%></td>
                    <td>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confimDelete(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </td>
                </tr>
             <% }) %>
            
         </tbody>
    </table>
    <a class="btn btn-dark" href="/admin/articles/new">Criar novo Artigo</a>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confimDelete(event, form){
        event.preventDefault();
        var decision = confirm("Deseja DELETAR esta Artigo?");
        if(decision){
            form.submit();
        }
    }
</script>
